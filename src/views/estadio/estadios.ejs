<%- include('./../layouts/header.ejs', {title:'Futbol con amigos'}) -%>

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Maradona Futbol</h1>
          <div class="row justify-content-between">
                      <a href="/createstadio" class="btn btn-sm btn-success">Agregar Cancha</a>
          </div>
        </div>
      </section>
     
    

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row justify-content-between">
            <h4>Canchas</h4>
            
          </div>
          


          
          <div class="row">
            <table class="table table-respondive table-hover text-center">
              
              
              <thead>
                <tr>                 
                  <th>Cantidad de jugadores</th>
                  <th>Numero de cancha</th>             

                </tr>
              </thead>
              <tbody>
                <% campo.forEach(element => { %>
                  
                  
                  <tr>
                   
                    <td><%= element.cantidadjugadores%></td>
                    <td><%= element.numerocancha %></td>
                
                   
                    <td>
                      <a class="btn btn-primary" href="/show/<%= element.id %>">Ver detalles</a>
                    </td>
                  </tr>
                  <% }); %>

                     
                    
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </main>

<%- include('./../layouts/footer.ejs') -%>
